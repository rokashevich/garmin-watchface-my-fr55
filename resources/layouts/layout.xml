<layout id="WatchFace">
    <label id="DateLabel" x="center" y="top" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_RED" />

    <label id="nightAvg"    x="left" y="13%" font="Graphics.FONT_NUMBER_MILD" color="Graphics.COLOR_PINK" />
    <label id="nightMinMax" x="left" y="25%" font="Graphics.FONT_NUMBER_MILD" color="Graphics.COLOR_PINK" />
    <label id="rhr" x="40%" y="13%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_BLUE" />

    <label id="activityDuration"  x="80%" y="13%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_YELLOW" />
    <label id="activityTimeCount" x="right" y="25%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_RIGHT" color="Graphics.COLOR_YELLOW" />

    <label id="TimeLabel" x="center" y="center" font="Graphics.FONT_NUMBER_MEDIUM" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />

    <label id="weather"  x="center" y="60%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_RED" />

    <label id="steps"  x="center" y="71%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_GREEN" />

    <label id="BattLabel" x="center" y="bottom" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_RED" />

</layout>